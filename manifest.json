{
  "name": "Github Review Stats",
  "version": "0.0.0.2",
  "manifest_version": 2,
  "description": "Show GitHub review statistics for all contributors",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "80": "icons/icon80.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Github Review Stats",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ]
}